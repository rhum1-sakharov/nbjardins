<persistence
        version="2.1"
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                            http://xmlns.jcp.org/xml/ns/persistence_2_1.xsd">

    <persistence-unit name="PERSISTENCE_UNIT_RLSV">


        <jta-data-source>myDS</jta-data-source>

        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Personne</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Application</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Artisan</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Client</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Personne__Role</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Role</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Devis</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.DevisLigne</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.ArtisanBanque</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.Taxe</class>
        <class>org.rlsv.adapters.secondaries.dataproviderjpa.entities.ConditionDeReglement</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>

            <!--
                When printing SQL in logs, let Hibernate format the SQL nicely and generate
                comments into the SQL string so we know why Hibernate executed the SQL statement.
            -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- Disable Hibernate scanning completely, we also don't want any hbm.xml files
                 discovered and added automatically. -->
            <property name="hibernate.archive.autodetection" value="none"/>

        </properties>
    </persistence-unit>


</persistence>